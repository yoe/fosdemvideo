	mkdir -m 700 -p /home/dvswitch/.ssh
	cat > authorized_keys <<- "__EOF__"
		ssh-rsa  dvswitch@rXmaster
		__EOF__
	chown dvswitch.dvswitch -R /home/dvswitch/.ssh/authorized_keys
	chmod 600 /home/dvswitch/.ssh/authorized_keys
