export DISPLAY=":0.0"

setxkbmap -option terminate:ctrl_alt_bksp &

# disable screensaver
xset -dpms
xset s off

# kill old sinks in case there are some left
#xterm -e ssh encoder1 'ps fax | grep "bash -c dvsink-command -h encoder1 -p 4321 -- ffmpeg2theora"|grep -v grep | sed -e "s/^ *//" | cut -d " " -f1  | xargs -n 1 kill -9' 
xterm -e ssh twinpact1 'ps fax | grep "dvgrab -noavc -"|grep -v grep | sed -e "s/^ *//" |cut -d " " -f1  | xargs -n 1 kill -9' 

# setup dvswitch
xterm -e dvswitch &
sleep 1
xterm -e "dc-start-source firewire:dvswitch1" &
sleep 3
xterm -e "dc-start-source firewire:twinpact1" &
sleep 3
dvsource-file -l /home/dvswitch/fosdem.dv &
xterm -e "dc-start-sink file:dvswitch1" &
#xterm -e "while true ; do dc-start-sink icecast:encoder1 ; done" &

# last command
xfce4-session
